<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <input id="armorToken" type="hidden" value=""/>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">
                        <a href="~/">ASP.NET Web API</a></p>
                </div>
                <div class="float-right">
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home", new {area = ""}, null)</li>
                            <li>@Html.ActionLink("API", "Index", "Help", new {area = ""}, null)</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        @RenderBody()

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/ajaxinitialiser")
        @Scripts.Render("~/bundles/values")
        <script>
            $(document).ready(function() {
                var armorToken = "ARMOR " + $("#armorToken").val();

                ajaxinitialiser.initialise(armorToken);
                values.getAll("#getValues");
            });
        </script>
        @RenderSection("scripts", required: false)
    </body>
</html>